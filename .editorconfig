root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8
max_line_length = 120

[*.{yml,yaml,json,js,css,html,toml,ts,vue,sql,scss}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off
